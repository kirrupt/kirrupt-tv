<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title><%= if assigns[:title] do %><%= assigns[:title] %> - <% end %>TV Episodes</title>
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
		<%= if assigns[:background] do %>
			<style>
			body{
				background:#f4f4f4 url('<%= static_path(@conn, "/#{assigns[:background]}") %>') fixed;
				background-position:center 97px;
			}
			</style>
		<% end %>
		<%= if assigns[:show] && assigns[:show].fixed_background do %>
			<style>
			body{
				background:#f4f4f4 url('http://kirrupt.com/tv/static/<%= static_path(@conn, "/#{assigns[:show].fixed_background}") %>') fixed;
				background-position:center 97px;
			}
			</style>
		<% end %>
	</head>
	<body class="<%= assigns[:html_class] %>">
		<div id="head_spacer"></div>
		<div id="header_wrapper">
			<div id="beta"></div>
			<div id="auth">
				<ul>
					<%= if @current_user do %>
					<li><a href="{{url_for('logout')}}">logout</a></li>
					<li style="margin-right:10px;padding-right:10px;border-right:1px #eee solid;">
						<a href="{{url_for('account')}}"><%= @current_user.username %></a></li>
					<% else %>
					<li><a href="{{url_for('register')}}">register</a></li>
					<li style="margin-right:10px;padding-right:10px;border-right:1px #eee solid;"><a href="{{url_for('login')}}">login</a></li>
					<% end %>
				</ul>
				<div class="clear"></div>
			</div>
			<div id="header" style="">
				<div id="logo">
					<a href="<%= recent_path(@conn, :index) %>"><div><img src="<%= static_path(@conn, "/images/logo.png") %>" /></div></a>
				</div>

				<div id="menu">
					<ul>
						<%= if @current_user do %>
  						<li><a href="<%= recent_path(@conn, :index) %>"<%= if @conn.request_path == "/" do %> class="selected"<% end %>>recent</a></li>
  						<li><a href="{{url_for('my_shows')}}"<%= if @conn.request_path == "/my-shows" || @conn.request_path == "/add" || assigns[:show] do %> class="selected"<% end %>>shows</a></li>
  						<li><a href="<%= time_wasted_path(@conn, :index) %>"<%= if @conn.request_path == "/time-wasted" do %> class="selected"<% end %>>time wasted</a></li>

  						<%= if @current_user.is_editor == 8888 do %>
  							<li><a href="{{url_for('admin')}}">admin</a></li>
  						<% end %>
						<% else %>
						  <li><a href="{{url_for('hello')}}" class="selected">recent</a></li>
						<% end %>
					</ul>
					<div class="clear"></div>
				</div>
				<div class="clear"></div>
			</div>
		</div>


		<div id="body_wrapper">
      <div id="alert-box">
        <p class="alert alert-info" role="alert"><%= get_flash(@conn, :info) %></p>
        <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>
      </div>
			<div id="title">
        <%= render_existing @view_module, "body-title.html", assigns %>
			</div>
			<div id="body">
				<div class="inner" id="content_ajax">
          <%= render @view_module, @view_template, assigns %>
				</div>
			</div>

			<div id="spacer"></div>
		</div>



		<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
		<script type="text/javascript">var site_url='<%= recent_path(@conn, :index) %>';</script>
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>

    <%= render_existing @view_module, "scripts.html", assigns %>

    <script>
		  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		  ga('create', 'UA-44824222-1', 'kirrupt.com');
		  ga('send', 'pageview');

		</script>
	</body>
</html>
